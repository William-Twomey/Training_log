@model IEnumerable<Training_log.Models.Deadlift>

@{
    ViewBag.Title = "Index";
}

<h2>Deadlift</h2>

<input type="button" class="btn btn-success" value="Create" onclick="location.href='@Url.Action("Create", "Deadlifts")'" />
<input type="button" class="btn btn-info" value="Pounds" onclick="location.href='@Url.Action("Index", "DeadliftPounds")'" />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateOfLift)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WeightKG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Repetitions)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfLift)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeightKG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Repetitions)
            </td>
            <td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning " }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>



