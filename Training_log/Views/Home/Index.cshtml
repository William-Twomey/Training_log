@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron text-center">
    <h1>Weight Training Log</h1>
    <p class="lead">@DateTime.Now.Day/@DateTime.Now.Month/@DateTime.Now.Year</p>
</div>

<div class="row">
    <div class="col-sm-4">
        <div class="card text-center border">
            <img src="~/Content/Images/squat.PNG" class="card-img-top rounded mx-auto d-block mt-4" style="width: 15rem; height: 15rem;" alt="Squat" />
            <div class="card-body">
                <h3 class="card-title">Squat</h3>
                <p class="card-text">Add, Update or Look at your </p>
                @using (Html.BeginForm("Index", "Squats"))
                {
                    <input type="submit" value="View" class="btn-success" />
                }
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="card text-center">
            <img src="~/Content/Images/bench.PNG" class="card-img-top rounded mx-auto d-block mt-4" style="width: 15rem; height: 15rem;" alt="Bench" />
            <div class="card-body">
                <h3 class="card-title">Bench Press</h3>
                <p class="card-text">Add, Update or Look at your</p>
                @using (Html.BeginForm("Index", "Benches"))
                {
                    <input type="submit" value="Bench Press" class="btn-success" />
                }
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="card text-center">
            <img src="~/Content/Images/deadlift.PNG" class="card-img-top rounded mx-auto d-block mt-4" style="width: 15rem; height: 15rem;" alt="Deadlift" />
            <div class="card-body">
                <h3 class="card-title">Deadlift</h3>
                <p class="card-text">Add, Update or Look at your</p>
                @using (Html.BeginForm("Index", "Deadlifts"))
                {
                    <input type="submit" value="Deadlift" class="btn-success" />
                }
            </div>
        </div>
    </div>
</div>